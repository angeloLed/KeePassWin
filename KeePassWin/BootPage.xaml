<Page
    x:Class="KeePassWin.BootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeePassWin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="loadingText" FontSize="50"
            FontFamily="Segoe MDL2 Assets"
                    Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
        <ProgressRing x:Name="loadingRing" Height="150" Width="150" IsActive="True" />
        
    </Grid>
</Page>
